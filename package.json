{
  "name": "server",
  "version": "0.1.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "start": "node ./server.js",
    "dev": "node www/server.js",
    "watch": "tsc-watch --esModuleInterop src/server.ts --outDir ./www --onSuccess \"node ./www/server.js\"",
    "test": "npm run drop-test-db && npx tsc && set ENV=test npx tsc && npm run create-test-db && npm run test-migrate-up && jasmine-ts --port 3001 && npm run test-migrate-down && npm run drop-test-db",
    "dev-migrate-up": "db-migrate --env dev up",
    "dev-migrate-down": "db-migrate --env dev reset",
    "create-dev-db": "db-migrate --config database_create.json db:create practice",
    "drop-dev-db": "db-migrate --config database_create.json db:drop practice",
    "clean": "rmdir /s /q www 2> nul || echo The directory does not exist",
    "tsc": "npx tsc",
    "build": "npm run clean && tsc && cp .npmrc www/.npmrc && cp package.json www/package.json && cd www && zip -r Archive.zip . && cd ..",
    "deploy": "eb list && eb use server-env && eb deploy"
  },
  "author": "Udacity",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.3.0",
    "dotenv": "^16.1.4",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.5.1",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.9",
    "@types/jasmine": "^4.3.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.2.6",
    "@types/pg": "^7.14.7",
    "@types/supertest": "^2.0.12",
    "dotenv-cli": "^7.2.1",
    "jasmine": "^3.6.4",
    "jasmine-spec-reporter": "^6.0.0",
    "jasmine-ts": "^0.3.0",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-node": "^9.1.1",
    "tsc-watch": "^4.2.9"
  }
}
